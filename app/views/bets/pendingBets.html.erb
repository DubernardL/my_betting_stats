<div class="container">
  <h1>Your pending Bets</h1>
  <% @bets.each do |bet| %>
<!-- MODAL DELETE -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Delete this bet for life !!!</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this bet from your stats ??
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= button_to bet_path(bet.id), method: :delete, class:"btn btn-danger" do %>
              Delete
            <% end %>
          </div>
        </div>
      </div>
    </div>
<!-- MODAL DELET FINISH -->
    <div class="card-div d-flex">
      <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">

          <% if bet.combine %>
            <li class="list-group-item match-li">
              <h3>Combined Bet</h3>
            </li>
          <% else %>
            <li class="list-group-item img-li">
              <div>
                <%= JSON.parse(bet.league)["name"] %>
              </div>
              <div>
                <img src="<%= JSON.parse(bet.league)["flag"] %>" alt="" class="image-card">
                <img src="<%= JSON.parse(bet.league)["logo"] %>" alt="" class="image-card">
              </div>
            </li>

            <li class="list-group-item match-li">
              <div >
                <img src="<%= JSON.parse(bet.match)["homeTeam"]["logo"] %>" alt="" class="logo-team mr-1">  VS <img src="<%= JSON.parse(bet.match)["awayTeam"]["logo"] %>" alt="" class="logo-team">
              </div>
            </li>
          <% end %>

          <li class="list-group-item bet-li">
            <div>
              <p>Odd</p>
              <p><%= bet.odd %></p>
            </div>
            <div>
              <p>Bet</p>
              <p><%= bet.bet_amount %> €</p>
            </div>
            <div>
              <p>Earnings</p>
              <p><%= (bet.odd * bet.bet_amount).round(2) %> €</p>
            </div>
          </li>
          <li class="list-group-item match-li"><span class="badge badge-warning"><%= bet.state %></span></li>
          <li class="list-group-item d-flex button-space">
            <%= link_to lose_path(bet.id), method: :put, class:"btn btn-danger" do %>
              <i class="fas fa-times"></i>
            <% end %>
            <%= link_to win_path(bet.id), method: :patch, class:"btn btn-success" do %>
              <i class="fas fa-check"></i>
            <% end %>
          </li>
          <li class="list-group-item d-flex button-space">
            <div class="trash-div">
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
                Delete
              </button>
            </div>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
