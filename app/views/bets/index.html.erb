<div class="container">
  <h1>Index des bets</h1>
  <% @bets.each do |bet| %>
    <div class="card-div d-flex">
      <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= JSON.parse(bet.league)["name"] %></li>
          <li class="list-group-item"><%= JSON.parse(bet.match)["homeTeam"]["team_name"] %> VS <%= JSON.parse(bet.match)["awayTeam"]["team_name"] %></li>
          <li class="list-group-item">Odd : <%= bet.odd %></li>
          <li class="list-group-item">Bet amount : <%= bet.bet_amount %> â‚¬</li>
        </ul>
      </div>
      <div class="trash-div">
        <%= button_to bet_path(bet.id), method: :delete, class:"trash" do %>
            <i class='fas fa-trash-alt'></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
